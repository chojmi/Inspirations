<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       tools:layout_height="match_parent"
       tools:layout_width="match_parent"
       tools:parentTag="android.widget.FrameLayout">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_user_photos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/photo_list_item"/>

    <com.github.chojmi.inspirations.presentation.common.EmptyListView
        android:id="@+id/empty_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_md"
        android:paddingTop="@dimen/margin_xxl"
        android:visibility="gone"
        app:text="@string/profile_user_no_photos"/>
</merge>