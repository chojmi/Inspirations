<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:showIn="@layout/gallery_grid_item">

    <LinearLayout
        style="@style/AppTheme.ClickableView.SelectableBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="@dimen/common_icon_standard_size"
            android:layout_height="@dimen/common_icon_standard_size"
            android:layout_margin="@dimen/margin_ms"
            app:srcCompat="@drawable/ic_fav_border"/>

        <TextView
            android:id="@+id/favs_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/gallery_grid_item_bottom_text_size"
            tools:text="999"/>
    </LinearLayout>

    <LinearLayout
        style="@style/AppTheme.ClickableView.SelectableBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="@dimen/common_icon_standard_size"
            android:layout_height="@dimen/common_icon_standard_size"
            android:layout_margin="@dimen/margin_ms"
            app:srcCompat="@drawable/ic_comment"/>

        <TextView
            android:id="@+id/comments_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/gallery_grid_item_bottom_text_size"
            tools:text="999"/>
    </LinearLayout>
</merge>