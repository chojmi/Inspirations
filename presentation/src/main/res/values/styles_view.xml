<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.ClickableView">
        <item name="android:clickable">true</item>
        <item name="android:background">@color/theme_primary_bg</item>
        <item name="android:stateListAnimator">@animator/common_lift_on_touch</item>
        <item name="android:layout_margin">@dimen/margin_xs</item>
    </style>

    <style name="AppTheme.ClickableView.SelectableBackground">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.TopBar">
        <item name="android:elevation">@dimen/material_toolbar_height</item>
    </style>

    <style name="AppTheme.TopBar.Bkg">
        <item name="android:background">@color/theme_statusbar_bg</item>
    </style>
</resources>