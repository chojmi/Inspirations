<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/theme_btn_primary_ripple">
    <item
        android:id="@android:id/mask"
        android:drawable="@drawable/btn_primary_pressed"/>
    <item>
        <selector>
            <item
                android:drawable="@drawable/btn_primary_selected"
                android:state_enabled="true"
                android:state_selected="true"/>
            <item
                android:drawable="@drawable/btn_primary_normal"
                android:state_enabled="true"/>
            <item
                android:drawable="@drawable/btn_primary_inactive"
                android:state_enabled="false"/>
        </selector>
    </item>
</ripple>